{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          ".github/**",
          ".vscode/**",
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Future Tool Systems",
      "_appTitle": "Future Tool Systems",
      "_appFaviconPath": "images/favicon.ico",
      "_appLogoPath": "images/FutureToolsLogoSawFTSblue.svg",
      "_enableSearch": true,
      "pdf": true,
      "gitContribute": {
        "repo": "https://github.com/amillen/FTS-Help-Site",
        "branch": "main",
        "path": "/"
      }
    }
  }
}